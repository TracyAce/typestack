      <%_ } if (contentType !== undefined) { _%>
        .set('Accept', '<%- contentType %>')
      <%_ } for (let queryParameter of queryParameters) { _%>
        .query({<%- queryParameter %> : <%- queryParameter %>})
      <%_ } if (operation.security !== undefined) { _%>
        .withCredentials()
      <%_ } _%>
      resolve(response.body);
      } catch (error) {
      reject(error);
      }
    });
  }
